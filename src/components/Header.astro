---
// Header component with navigation
const currentPath = Astro.url.pathname;
---

<header class="bg-white shadow-md sticky top-0 z-50">
  <div class="container mx-auto px-4">
    <!-- Top bar with contact info -->
    <div class="border-b border-gray-200 py-2">
      <div class="flex flex-col sm:flex-row justify-between items-center text-sm text-brand-gray">
        <div class="flex items-center gap-4 mb-2 sm:mb-0">
          <a href="tel:+971554274256" class="hover:text-brand-gold transition-colors">
            <span class="inline-block mr-1">ðŸ“±</span>
            +971 55 427 4256
          </a>
          <a href="mailto:wadialsadaf.sales@gmail.com" class="hover:text-brand-gold transition-colors">
            <span class="inline-block mr-1">âœ‰</span>
            wadialsadaf.sales@gmail.com
          </a>
        </div>
      </div>
    </div>

    <!-- Main navigation -->
    <nav class="py-4">
      <div class="flex items-center justify-between">
        <!-- Logo -->
        <a href="/" class="flex items-center gap-3">
          <img src="/images/logo.jpeg" alt="Wadi Al Sadaf" class="h-16 w-16 object-contain" />
          <div>
            <h1 class="text-xl font-bold text-brand-gold">Wadi Al Sadaf</h1>
            <p class="text-xs text-brand-gray">General Trading LLC</p>
          </div>
        </a>

        <!-- Desktop Navigation -->
        <div class="hidden md:flex items-center gap-6">
          <a
            href="/"
            class={`hover:text-brand-gold transition-colors font-medium ${currentPath === '/' ? 'text-brand-gold' : 'text-brand-black'}`}
          >
            Home
          </a>
          <a
            href="/machinery/products/"
            class={`hover:text-brand-gold transition-colors font-medium ${currentPath.startsWith('/machinery/products') ? 'text-brand-gold border-b-2 border-brand-gold pb-1' : 'text-brand-black'}`}
          >
            Products
          </a>
          <a
            href="/about/"
            class={`hover:text-brand-gold transition-colors font-medium ${currentPath === '/about/' ? 'text-brand-gold' : 'text-brand-black'}`}
          >
            About Us
          </a>
          <a
            href="/contact/"
            class={`hover:text-brand-gold transition-colors font-medium ${currentPath === '/contact/' ? 'text-brand-gold' : 'text-brand-black'}`}
          >
            Contact
          </a>
          <a
            href="/contact/"
            class="bg-brand-gold text-white px-6 py-2 rounded-md hover:bg-brand-gold-dark transition-colors font-medium"
          >
            Request Quote
          </a>
        </div>

        <!-- Mobile menu button -->
        <button
          id="mobile-menu-button"
          class="md:hidden text-brand-black hover:text-brand-gold"
          aria-label="Toggle menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>

      <!-- Mobile Navigation -->
      <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 border-t border-gray-200 pt-4">
        <div class="flex flex-col gap-4">
          <a
            href="/"
            class={`hover:text-brand-gold transition-colors font-medium ${currentPath === '/' ? 'text-brand-gold' : 'text-brand-black'}`}
          >
            Home
          </a>
          <a
            href="/machinery/products/"
            class={`hover:text-brand-gold transition-colors font-medium ${currentPath.startsWith('/machinery/products') ? 'text-brand-gold' : 'text-brand-black'}`}
          >
            Products
          </a>
          <a
            href="/about/"
            class={`hover:text-brand-gold transition-colors font-medium ${currentPath === '/about/' ? 'text-brand-gold' : 'text-brand-black'}`}
          >
            About Us
          </a>
          <a
            href="/contact/"
            class={`hover:text-brand-gold transition-colors font-medium ${currentPath === '/contact/' ? 'text-brand-gold' : 'text-brand-black'}`}
          >
            Contact
          </a>
          <a
            href="/contact/"
            class="bg-brand-gold text-white px-6 py-2 rounded-md hover:bg-brand-gold-dark transition-colors font-medium text-center"
          >
            Request Quote
          </a>
        </div>
      </div>
    </nav>
  </div>
</header>

<script>
  // Mobile menu toggle
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');

  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
