---
// Machinery LANDING PAGE (homepage of machinery domain)
import MachineryLayout from '../../layouts/MachineryLayout.astro';

const baseUrl = import.meta.env.BASE_URL || '/';
---

<MachineryLayout
  title="Home"
  description="Wadi Al Sadaf Machinery - Your trusted partner in industrial automation, electrical, and instrumentation solutions. Serving Sugar, Pharma, Cement, Food & Beverage, and more."
>
  <!-- Hero Banner -->
  <section class="relative bg-black py-32 md:py-40 overflow-hidden">
    <div class="absolute inset-0 opacity-40">
      <div class="absolute inset-0 bg-cover bg-center" style={`background-image: url('${baseUrl}images/machinery/electrical/hero.png')`}></div>
    </div>
    <div class="absolute inset-0 bg-gradient-to-br from-black/60 to-brand-gold-dark/60"></div>

    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-5xl mx-auto text-center">
        <img src={`${baseUrl}images/logo.jpeg`} alt="Wadi Al Sadaf" class="h-32 w-32 object-contain mx-auto mb-8 rounded-full shadow-2xl border-4 border-[var(--brand-gold)]" />

        <h1 class="text-5xl md:text-7xl font-bold text-white mb-6 drop-shadow-2xl">
          Wadi Al Sadaf
        </h1>

        <p class="text-2xl md:text-3xl text-white mb-12 font-medium drop-shadow-xl">
          Your Trusted Partner in Industrial Solutions
        </p>

        <div class="flex flex-col sm:flex-row gap-6 justify-center">
          <a
            href={`${baseUrl}machinery/products/`}
            class="bg-[var(--brand-gold)] text-white px-10 py-5 rounded-lg hover:bg-[var(--brand-gold-light)] transition-all font-bold text-xl shadow-2xl hover:shadow-3xl transform hover:-translate-y-1 hover:scale-105"
          >
            Browse Products
          </a>
          <a
            href={`${baseUrl}machinery/services/`}
            class="bg-transparent text-white px-10 py-5 rounded-lg hover:bg-white/10 transition-all font-bold text-xl border-3 border-white shadow-2xl hover:shadow-3xl transform hover:-translate-y-1 hover:scale-105"
          >
            Browse Services
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Our Products -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-[var(--brand-black)] mb-4">Our Products</h2>
          <div class="w-24 h-1 bg-[var(--brand-gold)] mx-auto mb-6"></div>
          <p class="text-lg text-[var(--brand-gray)] max-w-3xl mx-auto">
            Complete industrial products from world-leading brands for your manufacturing and process needs.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          <!-- Electrical -->
          <a href={`${baseUrl}machinery/electrical/`} class="group bg-gray-50 p-8 rounded-xl hover:shadow-xl transition-all hover:-translate-y-2 border-2 border-transparent hover:border-[var(--brand-gold)]">
            <div class="w-16 h-16 bg-[var(--brand-gold)] rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
              <span class="text-3xl text-white">‚ö°</span>
            </div>
            <h3 class="text-2xl font-bold text-[var(--brand-black)] mb-3">Electrical</h3>
            <p class="text-[var(--brand-gray)] mb-4">VFDs, Motors, Circuit Breakers, Transformers, Cables, and Panel Components.</p>
            <span class="text-[var(--brand-gold)] font-semibold group-hover:text-[var(--brand-gold-dark)]">View Products ‚Üí</span>
          </a>

          <!-- Automation -->
          <a href={`${baseUrl}machinery/automation/`} class="group bg-gray-50 p-8 rounded-xl hover:shadow-xl transition-all hover:-translate-y-2 border-2 border-transparent hover:border-[var(--brand-gold)]">
            <div class="w-16 h-16 bg-[var(--brand-gold)] rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
              <span class="text-3xl text-white">ü§ñ</span>
            </div>
            <h3 class="text-2xl font-bold text-[var(--brand-black)] mb-3">Automation</h3>
            <p class="text-[var(--brand-gray)] mb-4">PLCs, HMIs, Industrial PCs, Smart Sensors, and Robotics solutions.</p>
            <span class="text-[var(--brand-gold)] font-semibold group-hover:text-[var(--brand-gold-dark)]">View Products ‚Üí</span>
          </a>

          <!-- Instrumentation -->
          <a href={`${baseUrl}machinery/instrumentation/`} class="group bg-gray-50 p-8 rounded-xl hover:shadow-xl transition-all hover:-translate-y-2 border-2 border-transparent hover:border-[var(--brand-gold)]">
            <div class="w-16 h-16 bg-[var(--brand-gold)] rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
              <span class="text-3xl text-white">üìä</span>
            </div>
            <h3 class="text-2xl font-bold text-[var(--brand-black)] mb-3">Instrumentation</h3>
            <p class="text-[var(--brand-gray)] mb-4">Flow, Level, Pressure, and Temperature instruments, Actuators, and Valves.</p>
            <span class="text-[var(--brand-gold)] font-semibold group-hover:text-[var(--brand-gold-dark)]">View Products ‚Üí</span>
          </a>
        </div>

        <div class="text-center mt-12">
          <a
            href={`${baseUrl}machinery/products/`}
            class="inline-block bg-[var(--brand-gold)] text-white px-8 py-4 rounded-lg hover:bg-[var(--brand-gold-dark)] transition-all font-semibold shadow-lg hover:shadow-xl"
          >
            View All Products ‚Üí
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Our Services -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-[var(--brand-black)] mb-4">Our Services</h2>
          <div class="w-24 h-1 bg-[var(--brand-gold)] mx-auto mb-6"></div>
          <p class="text-lg text-[var(--brand-gray)] max-w-3xl mx-auto">
            Professional industrial services with experienced technicians, quick turnaround, and comprehensive warranty.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          <!-- Repairing & Calibration -->
          <a href={`${baseUrl}machinery/repairing-calibration/`} class="group bg-white p-8 rounded-xl hover:shadow-xl transition-all hover:-translate-y-2 border-2 border-transparent hover:border-[var(--brand-gold)]">
            <div class="w-16 h-16 bg-[var(--brand-gold)] rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
              <span class="text-3xl text-white">üîß</span>
            </div>
            <h3 class="text-2xl font-bold text-[var(--brand-black)] mb-3">Repairing & Calibration</h3>
            <p class="text-[var(--brand-gray)] mb-4">HMI monitors, drives, PLCs, power supplies, pumps, motors, and PCB repairs.</p>
            <span class="text-[var(--brand-gold)] font-semibold group-hover:text-[var(--brand-gold-dark)]">View Services ‚Üí</span>
