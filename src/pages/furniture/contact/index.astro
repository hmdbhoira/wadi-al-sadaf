---
// Contact page for Outdoor & Pool division
import OutdoorLayout from '../../../layouts/OutdoorLayout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';

const baseUrl = import.meta.env.BASE_URL || '/';

const breadcrumbs = [
  { label: 'Home', href: `${baseUrl}furniture/` },
  { label: 'Contact' },
];

const contactInfo = {
  phone: '+971 55 614 2174',
  email: 'wadialsadaf.ae@gmail.com',
  whatsapp: '+971556142174',
  address: 'Dubai Industrial City, 17R-SH-493',
  addressLine2: 'Saih Shuaib 3, Dubai, UAE',
};

const productCategories = [
  'Sun Loungers & Poolside Furniture',
  'Outdoor Dining Sets',
  'Umbrellas & Shade Solutions',
  'Life Saving Equipment',
  'Pool Safety Gear',
  'Staff Accommodation Furniture',
  'Industrial Lockers & Storage',
  'Kitchen & Catering Equipment'
];
---

<OutdoorLayout
  title="Contact Us"
  description="Get in touch with Wadi Al Sadaf Outdoor & Pool Division. Request a quote for outdoor furniture, pool equipment, and staff accommodation supplies."
>
  <!-- Hero Section -->
  <section class="relative bg-[#1F4040] pt-8 pb-24 md:pt-12 md:pb-32">
    <div class="absolute inset-0 opacity-30">
      <div class="absolute inset-0 bg-cover bg-center" style="background-image: url('https://images.unsplash.com/photo-1575429198097-0414ec08e8cd?w=1920&q=80')"></div>
    </div>
    <div class="absolute inset-0 bg-gradient-to-br from-[#1F4040]/50 to-[#2D5A5A]/40"></div>
    <div class="container mx-auto px-4 relative z-10">
      <Breadcrumbs items={breadcrumbs} />
      <div class="text-center max-w-4xl mx-auto mt-8">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 drop-shadow-2xl">
          Contact Us
        </h1>
        <p class="text-xl md:text-2xl text-white mb-8 drop-shadow-xl">
          Get in touch for outdoor furniture quotes and project consultations
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Cards -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-16">
          <!-- Phone -->
          <a
            href={`tel:${contactInfo.whatsapp}`}
            class="bg-gray-50 p-8 rounded-xl text-center hover:shadow-xl transition-all hover:-translate-y-2 border-2 border-transparent hover:border-[#2D5A5A] group"
          >
            <div class="w-20 h-20 bg-[#2D5A5A] rounded-full flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Call Us</h3>
            <p class="text-[#2D5A5A] font-semibold text-lg">{contactInfo.phone}</p>
            <p class="text-gray-500 text-sm mt-2">Available for calls & inquiries</p>
          </a>

          <!-- WhatsApp -->
          <a
            href={`https://wa.me/${contactInfo.whatsapp}`}
            target="_blank"
            rel="noopener noreferrer"
            class="bg-gray-50 p-8 rounded-xl text-center hover:shadow-xl transition-all hover:-translate-y-2 border-2 border-transparent hover:border-green-500 group"
          >
            <div class="w-20 h-20 bg-green-500 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform">
              <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">WhatsApp</h3>
            <p class="text-green-600 font-semibold text-lg">Message Us</p>
            <p class="text-gray-500 text-sm mt-2">Quick response guaranteed</p>
          </a>

          <!-- Email -->
          <a
            href={`mailto:${contactInfo.email}`}
            class="bg-gray-50 px-4 py-8 rounded-xl text-center hover:shadow-xl transition-all hover:-translate-y-2 border-2 border-transparent hover:border-[#2D5A5A] group"
          >
            <div class="w-20 h-20 bg-[#2D5A5A] rounded-full flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Email Us</h3>
            <p class="text-[#2D5A5A] font-semibold text-base">{contactInfo.email}</p>
            <p class="text-gray-500 text-sm mt-2">For quotes & inquiries</p>
          </a>

          <!-- Location -->
          <a
            href="https://maps.google.com/?q=Dubai+Industrial+City+Saih+Shuaib+3+Dubai+UAE"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-gray-50 p-8 rounded-xl text-center hover:shadow-xl transition-all hover:-translate-y-2 border-2 border-transparent hover:border-[#2D5A5A] group"
          >
            <div class="w-20 h-20 bg-[#2D5A5A] rounded-full flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Visit Us</h3>
            <p class="text-[#2D5A5A] font-semibold text-sm">{contactInfo.address}</p>
            <p class="text-gray-500 text-sm mt-1">{contactInfo.addressLine2}</p>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Request Quote Section -->
  <section id="request-quote" class="py-20 bg-gradient-to-b from-gray-50 to-white scroll-mt-32">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid md:grid-cols-2 gap-12">
          <!-- Left: Info -->
          <div>
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
              Request a Quote
            </h2>
            <div class="w-20 h-1 bg-[var(--brand-gold)] mb-8"></div>

            <p class="text-lg text-gray-600 leading-relaxed mb-8">
              Looking for outdoor furniture or pool equipment? Contact us directly via WhatsApp or email for a quick quote. We specialize in bulk orders for hotels, resorts, and real estate projects.
            </p>

            <div class="bg-white p-6 rounded-xl shadow-md border-l-4 border-[#2D5A5A] mb-8">
              <h4 class="font-bold text-gray-900 mb-4">We Supply:</h4>
              <ul class="space-y-2">
                {productCategories.map((category) => (
                  <li class="flex items-center gap-3 text-gray-600">
                    <span class="text-[#2D5A5A] font-bold">âœ“</span>
                    {category}
                  </li>
                ))}
              </ul>
            </div>

            <div class="bg-[#E6F4F5] p-6 rounded-xl">
              <h4 class="font-bold text-gray-900 mb-2">Bulk Orders Welcome</h4>
              <p class="text-gray-600 text-sm mb-4">
                Get competitive pricing on bulk orders for hotels, resorts, residential communities, and construction camps. We handle projects of all sizes across the UAE.
              </p>
              <a
                href={`https://wa.me/${contactInfo.whatsapp}?text=Hi, I'm interested in bulk pricing for outdoor furniture and equipment.`}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 text-[#2D5A5A] font-semibold hover:text-[#3D7A7A] transition-colors"
              >
                Get Bulk Pricing
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </div>

          <!-- Right: Quick Contact Box -->
          <div>
            <div class="bg-white p-8 md:p-10 rounded-2xl shadow-xl border border-gray-100">
              <h3 class="text-2xl font-bold text-gray-900 mb-6 text-center">
                Get in Touch
              </h3>

              <div class="space-y-6">
                <!-- WhatsApp CTA -->
                <a
                  href={`https://wa.me/${contactInfo.whatsapp}?text=Hi, I'm interested in your outdoor furniture and pool products. Please share more information.`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center gap-4 bg-green-500 text-white p-5 rounded-xl hover:bg-green-600 transition-all hover:shadow-lg group"
                >
                  <div class="w-14 h-14 bg-white/20 rounded-full flex items-center justify-center group-hover:scale-110 transition-transform">
                    <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                    </svg>
                  </div>
                  <div>
                    <span class="block font-bold text-lg">Chat on WhatsApp</span>
                    <span class="text-white/80 text-sm">Get instant response</span>
                  </div>
                </a>

                <!-- Phone CTA -->
                <a
                  href={`tel:${contactInfo.whatsapp}`}
                  class="flex items-center gap-4 bg-[#2D5A5A] text-white p-5 rounded-xl hover:bg-[#3D7A7A] transition-all hover:shadow-lg group"
                >
                  <div class="w-14 h-14 bg-white/20 rounded-full flex items-center justify-center group-hover:scale-110 transition-transform">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                  </div>
                  <div>
                    <span class="block font-bold text-lg">Call Us Directly</span>
                    <span class="text-white/80 text-sm">{contactInfo.phone}</span>
                  </div>
                </a>

                <!-- Email CTA -->
                <a
                  href={`mailto:${contactInfo.email}?subject=Product Inquiry - Outdoor Furniture&body=Hi, I'm interested in your outdoor furniture and pool equipment. Please share more information.`}
                  class="flex items-center gap-4 bg-gray-100 text-gray-900 p-5 rounded-xl hover:bg-gray-200 transition-all hover:shadow-lg group"
                >
                  <div class="w-14 h-14 bg-[#2D5A5A]/20 rounded-full flex items-center justify-center group-hover:scale-110 transition-transform">
                    <svg class="w-8 h-8 text-[#2D5A5A]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                  <div>
                    <span class="block font-bold text-lg">Send an Email</span>
                    <span class="text-gray-500 text-sm">For detailed inquiries</span>
                  </div>
                </a>
              </div>

              <div class="mt-8 pt-6 border-t border-gray-200 text-center">
                <p class="text-gray-500 text-sm">
                  We typically respond within <strong class="text-gray-900">24 hours</strong>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Browse Products CTA -->
  <section class="relative bg-[#2D5A5A] py-16 overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 right-0 w-96 h-96 bg-white rounded-full -translate-y-1/2 translate-x-1/2"></div>
      <div class="absolute bottom-0 left-0 w-80 h-80 bg-white rounded-full translate-y-1/2 -translate-x-1/2"></div>
    </div>
    <div class="container mx-auto px-4 text-center relative z-10">
      <h2 class="text-3xl font-bold text-white mb-4">Looking for Products?</h2>
      <p class="text-xl text-gray-200 mb-8 max-w-2xl mx-auto">
        Browse our complete catalog of outdoor furniture, pool equipment, and staff supplies.
      </p>
      <a
        href={`${baseUrl}furniture/products/`}
        class="inline-block bg-white text-[#2D5A5A] px-10 py-4 rounded-lg hover:bg-gray-100 transition-all font-semibold text-lg shadow-xl hover:shadow-2xl transform hover:-translate-y-1"
      >
        Browse Products
      </a>
    </div>
  </section>
</OutdoorLayout>
