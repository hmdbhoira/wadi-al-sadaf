---
// Root Hub - Simple landing with two domain tiles
import '../styles/global.css';

const baseUrl = import.meta.env.BASE_URL || '/';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Wadi Al Sadaf General Trading LLC - Industrial Machinery & Office Furniture Solutions" />
    <title>Wadi Al Sadaf | General Trading LLC</title>
    <link rel="icon" type="image/png" href={`${baseUrl}favicon.png`} />
  </head>
  <body class="min-h-screen bg-gradient-to-br from-[var(--brand-cream)] to-white flex flex-col">
    <!-- Header -->
    <header class="py-8">
      <div class="container mx-auto px-4 text-center">
        <img
          src={`${baseUrl}images/logo.jpeg`}
          alt="Wadi Al Sadaf"
          class="h-24 w-24 object-contain mx-auto mb-4 rounded-full shadow-lg"
        />
        <h1 class="text-3xl md:text-4xl font-bold text-[var(--brand-black)]">
          Wadi Al Sadaf
        </h1>
        <p class="text-lg text-[var(--brand-gold)] font-medium">
          General Trading LLC
        </p>
      </div>
    </header>

    <!-- Main Content - Two Tiles -->
    <main class="flex-grow flex items-center justify-center px-4 py-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl w-full">
        <!-- Machinery Tile -->
        <a
          href={`${baseUrl}machinery/`}
          class="group bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden border border-gray-100 hover:border-[var(--brand-gold)] flex flex-col"
        >
          <div class="h-48 bg-gradient-to-br from-[var(--brand-gold)] to-[var(--brand-gold-dark)] flex items-center justify-center">
            <svg class="w-24 h-24 text-white group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <div class="p-6 text-center">
            <h2 class="text-2xl font-bold text-[var(--brand-black)] mb-2 group-hover:text-[var(--brand-gold-dark)] transition-colors">
              Industrial Machinery
            </h2>
            <p class="text-[var(--brand-gray)]">
              Electrical, Automation, Instrumentation, Mechanical, Safety & Security, Repairing, Panel Fabrication, Control Projects
            </p>
          </div>
        </a>

        <!-- Outdoor & Pool Tile -->
        <a
          href={`${baseUrl}furniture/`}
          class="group bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden border border-gray-100 hover:border-[#2D5A5A] flex flex-col"
        >
          <div class="h-48 bg-gradient-to-br from-[#2D5A5A] to-[#1F4040] flex items-center justify-center">
            <svg class="w-24 h-24 text-white group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
            </svg>
          </div>
          <div class="p-6 text-center">
            <h2 class="text-2xl font-bold text-[var(--brand-black)] mb-2 group-hover:text-[#2D5A5A] transition-colors">
              Outdoor & Pool
            </h2>
            <p class="text-[var(--brand-gray)]">
              Sun loungers, outdoor furniture, pool safety equipment, and staff accommodation solutions
            </p>
          </div>
        </a>
      </div>
    </main>

    <!-- Simple Footer -->
    <footer class="py-6 bg-[var(--brand-black)] text-center">
      <p class="text-gray-400 text-sm">
        &copy; {new Date().getFullYear()} Wadi Al Sadaf General Trading LLC. All rights reserved.
      </p>
    </footer>
  </body>
</html>
