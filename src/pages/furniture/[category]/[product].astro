---
// Dynamic product detail page for Outdoor & Pool products
import OutdoorLayout from '../../../layouts/OutdoorLayout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import { outdoorCategories } from '../../../data/outdoor';

export async function getStaticPaths() {
  const paths = [];

  for (const category of outdoorCategories) {
    for (const product of category.products) {
      paths.push({
        params: { category: category.slug, product: product.slug },
        props: { category, product },
      });
    }
  }

  return paths;
}

const { category, product } = Astro.props;
const baseUrl = import.meta.env.BASE_URL || '/';

const breadcrumbs = [
  { label: 'Home', href: `${baseUrl}furniture/` },
  { label: 'Products', href: `${baseUrl}furniture/products/` },
  { label: category.name, href: `${baseUrl}furniture/${category.slug}/` },
  { label: product.name },
];

// Get related products (other products in same category, excluding current)
const relatedProducts = category.products
  .filter((p: typeof product) => p.slug !== product.slug)
  .slice(0, 4);

// Category hero images - actual outdoor/pool related photos
const categoryHeroImages: Record<string, string> = {
  'sun-loungers-poolside': 'https://images.unsplash.com/photo-1576013551627-0cc20b96c2a7?w=1920&q=80', // Pool/poolside
  'outdoor-furniture': 'https://images.unsplash.com/photo-1600210492090-a159ffa3aeaf?w=1920&q=80', // Outdoor patio furniture
  'life-saving-pool-safety': 'https://images.unsplash.com/photo-1641137648643-610de6eda340?w=1920&q=80', // Pool safety
  'camp-staff-supplies': 'https://plus.unsplash.com/premium_photo-1661696366447-f805ed09b9b6?w=1920&q=80', // Staff supplies
};

// Product placeholder images
const getProductImage = (categorySlug: string, productSlug: string): string => {
  // Sun loungers & poolside
  if (categorySlug === 'sun-loungers-poolside') {
    if (productSlug.includes('lounger')) return 'https://images.unsplash.com/photo-1519046904884-53103b34b206?w=800&q=80';
    if (productSlug.includes('table')) return 'https://images.unsplash.com/photo-1530018607912-eff2daa1bac4?w=800&q=80';
    return 'https://images.unsplash.com/photo-1575429198097-0414ec08e8cd?w=800&q=80';
  }
  // Outdoor furniture
  if (categorySlug === 'outdoor-furniture') {
    if (productSlug.includes('chair')) return 'https://images.unsplash.com/photo-1506439773649-6e0eb8cfb237?w=800&q=80';
    if (productSlug.includes('table')) return 'https://images.unsplash.com/photo-1533090161767-e6ffed986c88?w=800&q=80';
    if (productSlug.includes('umbrella') && productSlug.includes('cantilever')) return 'https://images.unsplash.com/photo-1520271348391-049dd132bb7c?w=800&q=80';
    if (productSlug.includes('umbrella')) return 'https://images.unsplash.com/photo-1517457373958-b7bdd4587205?w=800&q=80';
    if (productSlug.includes('base')) return 'https://images.unsplash.com/photo-1600210492493-0946911123ea?w=800&q=80';
    return 'https://images.unsplash.com/photo-1600210492493-0946911123ea?w=800&q=80';
  }
  // Life saving & pool safety
  if (categorySlug === 'life-saving-pool-safety') {
    if (productSlug.includes('jacket')) return 'https://images.unsplash.com/photo-1544551763-46a013bb70d5?w=800&q=80';
    if (productSlug.includes('buoy') || productSlug.includes('ring')) return 'https://images.unsplash.com/photo-1530866495561-507c9faab2ed?w=800&q=80';
    if (productSlug.includes('tube')) return 'https://images.unsplash.com/photo-1599058917765-a780eda07a3e?w=800&q=80';
    if (productSlug.includes('hook')) return 'https://images.unsplash.com/photo-1530866495561-507c9faab2ed?w=800&q=80';
    if (productSlug.includes('spine') || productSlug.includes('board')) return 'https://images.unsplash.com/photo-1587351021759-3e566b6af7cc?w=800&q=80';
    if (productSlug.includes('lifeguard') || productSlug.includes('chair')) return 'https://images.unsplash.com/photo-1506126613408-eca07ce68773?w=800&q=80';
    if (productSlug.includes('first-aid')) return 'https://images.unsplash.com/photo-1603398938378-e54eab446dde?w=800&q=80';
    return 'https://images.unsplash.com/photo-1530866495561-507c9faab2ed?w=800&q=80';
  }
  // Camp & staff supplies
  if (categorySlug === 'camp-staff-supplies') {
    if (productSlug.includes('bunk') || productSlug.includes('bed')) return 'https://images.unsplash.com/photo-1505693416388-ac5ce068fe85?w=800&q=80';
    if (productSlug.includes('locker')) return 'https://images.unsplash.com/photo-1558618666-fcd25c85cd64?w=800&q=80';
    if (productSlug.includes('wardrobe') || productSlug.includes('cabinet')) return 'https://images.unsplash.com/photo-1558997519-83ea9252edf8?w=800&q=80';
    if (productSlug.includes('mattress')) return 'https://images.unsplash.com/photo-1631049307264-da0ec9d70304?w=800&q=80';
    if (productSlug.includes('bedding') || productSlug.includes('blanket') || productSlug.includes('pillow') || productSlug.includes('comforter')) return 'https://images.unsplash.com/photo-1522771739844-6a9f6d5f14af?w=800&q=80';
    if (productSlug.includes('shoe') || productSlug.includes('boot')) return 'https://images.unsplash.com/photo-1542291026-7eec264c27ff?w=800&q=80';
    if (productSlug.includes('coverall') || productSlug.includes('pant') || productSlug.includes('shirt') || productSlug.includes('freezer')) return 'https://images.unsplash.com/photo-1523381210434-271e8be1f52b?w=800&q=80';
    if (productSlug.includes('vest') || productSlug.includes('helmet') || productSlug.includes('harness')) return 'https://images.unsplash.com/photo-1504307651254-35680f356dfd?w=800&q=80';
    if (productSlug.includes('glove')) return 'https://images.unsplash.com/photo-1583947215259-38e31be8751f?w=800&q=80';
    if (productSlug.includes('goggle') || productSlug.includes('mask') || productSlug.includes('respirator')) return 'https://images.unsplash.com/photo-1584634731339-252c581abfc5?w=800&q=80';
    if (productSlug.includes('bin') || productSlug.includes('waste') || productSlug.includes('recycling')) return 'https://images.unsplash.com/photo-1532996122724-e3c354a0b15b?w=800&q=80';
    if (productSlug.includes('stove') || productSlug.includes('boiler') || productSlug.includes('cooler') || productSlug.includes('water')) return 'https://images.unsplash.com/photo-1584622650111-993a426fbf0a?w=800&q=80';
    if (productSlug.includes('shelving') || productSlug.includes('storage')) return 'https://images.unsplash.com/photo-1558618666-fcd25c85cd64?w=800&q=80';
    if (productSlug.includes('cone') || productSlug.includes('barrier') || productSlug.includes('traffic') || productSlug.includes('warning')) return 'https://images.unsplash.com/photo-1584467735815-f778f274e296?w=800&q=80';
    if (productSlug.includes('fire') || productSlug.includes('eye-wash') || productSlug.includes('stretcher') || productSlug.includes('spill')) return 'https://images.unsplash.com/photo-1558642452-9d2a7deb7f62?w=800&q=80';
    if (productSlug.includes('ear') || productSlug.includes('megaphone')) return 'https://images.unsplash.com/photo-1590935217281-8f102120d683?w=800&q=80';
    if (productSlug.includes('mirror')) return 'https://images.unsplash.com/photo-1618220179428-22790b461013?w=800&q=80';
    return 'https://images.unsplash.com/photo-1504280390367-361c6d9f38f4?w=800&q=80';
  }
  return 'https://images.unsplash.com/photo-1600210492493-0946911123ea?w=800&q=80';
};
---

<OutdoorLayout
  title={product.name}
  description={product.description}
>
  <!-- Hero Section -->
  <section class="relative bg-[#1F4040] pt-8 pb-16 md:pt-12 md:pb-20">
    <div class="absolute inset-0 opacity-30">
      <div class="absolute inset-0 bg-cover bg-center" style={`background-image: url('${categoryHeroImages[category.slug]}')`}></div>
    </div>
    <div class="absolute inset-0 bg-gradient-to-br from-[#1F4040]/50 to-[#2D5A5A]/30"></div>
    <div class="container mx-auto px-4 relative z-10">
      <Breadcrumbs items={breadcrumbs} />
    </div>
  </section>

  <!-- Product Details -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid md:grid-cols-2 gap-12 items-start">
          <!-- Product Image -->
          <div class="bg-gray-50 rounded-2xl p-8 shadow-lg">
            <img
              src={getProductImage(category.slug, product.slug)}
              alt={product.name}
              class="w-full h-auto object-contain max-h-96 mx-auto rounded-lg"
            />
          </div>

          <!-- Product Info -->
          <div>
            <div class="mb-4">
              <span class="text-sm font-semibold text-[#2D5A5A] uppercase tracking-wide">
                {category.name}
              </span>
            </div>

            <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
              {product.name}
            </h1>

            <p class="text-lg text-gray-600 leading-relaxed mb-8">
              {product.description}
            </p>

            <!-- Key Features -->
            {product.features && product.features.length > 0 && (
              <div class="bg-[#E6F4F5] rounded-xl p-6 mb-8">
                <h3 class="font-bold text-gray-900 mb-4">Key Features</h3>
                <ul class="space-y-2">
                  {product.features.map((feature: string) => (
                    <li class="flex items-start gap-3">
                      <span class="text-[#2D5A5A] mt-1 font-bold">✓</span>
                      <span class="text-gray-700">{feature}</span>
                    </li>
                  ))}
                </ul>
              </div>
            )}

            <!-- Specifications -->
            {product.specifications && Object.keys(product.specifications).length > 0 && (
              <div class="bg-gray-50 rounded-xl p-6 mb-8">
                <h3 class="font-bold text-gray-900 mb-4">Specifications</h3>
                <dl class="grid grid-cols-2 gap-3">
                  {Object.entries(product.specifications).map(([key, value]) => (
                    <div class="col-span-2 sm:col-span-1">
                      <dt class="text-sm text-gray-500">{key}</dt>
                      <dd class="font-medium text-gray-900">{value}</dd>
                    </div>
                  ))}
                </dl>
              </div>
            )}

            <!-- CTA Buttons -->
            <div class="flex flex-col sm:flex-row gap-4">
              <a
                href={`${baseUrl}furniture/contact/#request-quote`}
                class="bg-[var(--brand-gold)] text-white px-8 py-4 rounded-xl hover:bg-[var(--brand-gold-light)] transition-all font-bold shadow-lg hover:shadow-xl flex items-center justify-center"
              >
                Request Quote
              </a>
              <a
                href={`https://wa.me/+971556142174?text=Hi, I'm interested in ${product.name}. Please share more information.`}
                target="_blank"
                rel="noopener noreferrer"
                class="bg-green-500 text-white px-8 py-4 rounded-xl hover:bg-green-600 transition-all font-bold text-center shadow-lg hover:shadow-xl flex items-center justify-center gap-2"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                </svg>
                WhatsApp Inquiry
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Products -->
  {relatedProducts.length > 0 && (
    <section class="py-16 bg-gradient-to-b from-gray-50 to-white">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-10">
            <h2 class="text-2xl font-bold text-gray-900 mb-2">Related Products</h2>
            <p class="text-gray-600">
              Other {category.name.toLowerCase()} products you might be interested in
            </p>
          </div>

          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
            {relatedProducts.map((relatedProduct: typeof product) => (
              <a
                href={`${baseUrl}furniture/${category.slug}/${relatedProduct.slug}/`}
                class="group bg-white rounded-xl overflow-hidden hover:shadow-lg transition-all border border-gray-200 hover:border-[#2D5A5A] flex flex-col"
              >
                <div class="h-40 overflow-hidden flex items-center justify-center bg-gray-50">
                  <img
                    src={getProductImage(category.slug, relatedProduct.slug)}
                    alt={relatedProduct.name}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                  />
                </div>
                <div class="p-4 bg-white mt-auto">
                  <h4 class="font-bold text-gray-900 group-hover:text-[#2D5A5A] transition-colors text-sm text-center">
                    {relatedProduct.name}
                  </h4>
                </div>
              </a>
            ))}
          </div>

          <div class="text-center mt-8">
            <a
              href={`${baseUrl}furniture/${category.slug}/`}
              class="inline-block text-[#2D5A5A] font-semibold hover:text-[#3D7A7A] transition-colors"
            >
              View All {category.name} Products →
            </a>
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- CTA Section -->
  <section class="relative bg-[#2D5A5A] py-16 overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 right-0 w-96 h-96 bg-white rounded-full -translate-y-1/2 translate-x-1/2"></div>
      <div class="absolute bottom-0 left-0 w-80 h-80 bg-white rounded-full translate-y-1/2 -translate-x-1/2"></div>
    </div>
    <div class="container mx-auto px-4 text-center relative z-10">
      <h2 class="text-3xl font-bold text-white mb-4">Need Help Choosing?</h2>
      <p class="text-lg text-gray-200 mb-8 max-w-2xl mx-auto">
        Our team can help you select the right products for your project and provide bulk pricing.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href={`${baseUrl}furniture/contact/`}
          class="bg-white text-[#2D5A5A] px-8 py-3 rounded-lg hover:bg-gray-100 transition-all font-semibold shadow-lg"
        >
          Contact Us
        </a>
        <a
          href="tel:+971556142174"
          class="bg-[#1F4040] text-white px-8 py-3 rounded-lg hover:bg-[#0F3030] transition-all font-semibold border-2 border-white shadow-lg"
        >
          +971 55 614 2174
        </a>
      </div>
    </div>
  </section>
</OutdoorLayout>
