---
// Outdoor & Pool domain header - Home links to /furniture/
const currentPath = Astro.url.pathname;
const baseUrl = import.meta.env.BASE_URL || '/';

// Helper function to check if current path matches, accounting for base URL
const isCurrentPath = (path: string) => {
  const cleanPath = path.startsWith('/') ? path.slice(1) : path;
  const fullPath = `${baseUrl}${cleanPath}`;
  return currentPath === fullPath || currentPath === fullPath.replace(/\/$/, '');
};

const pathStartsWith = (path: string) => {
  const cleanPath = path.startsWith('/') ? path.slice(1) : path;
  const fullPath = `${baseUrl}${cleanPath}`;
  return currentPath.startsWith(fullPath);
};
