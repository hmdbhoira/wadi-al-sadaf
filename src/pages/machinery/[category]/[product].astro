---
// Dynamic product detail page
import MachineryLayout from '../../../layouts/MachineryLayout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import { machineryCategories, getCategoryBySlug, getProductBySlug } from '../../../data/machinery';

export async function getStaticPaths() {
  const paths = [];

  for (const category of machineryCategories) {
    for (const product of category.products) {
      paths.push({
        params: { category: category.slug, product: product.slug },
        props: { category, product },
      });
    }
  }

  return paths;
}

const { category, product } = Astro.props;
const baseUrl = import.meta.env.BASE_URL || '/';

const breadcrumbs = [
  { label: 'Home', href: `${baseUrl}machinery/` },
  { label: 'Products', href: `${baseUrl}machinery/products/` },
  { label: category.name, href: `${baseUrl}machinery/${category.slug}/` },
  { label: product.name },
];

// Get related products (other products in same category, excluding current)
const relatedProducts = category.products
  .filter((p: typeof product) => p.slug !== product.slug)
  .slice(0, 4);
---

<MachineryLayout
  title={product.name}
  description={product.description}
>
  <!-- Hero Section -->
  <section class="relative bg-black pt-8 pb-16 md:pt-12 md:pb-20">
    <div class="absolute inset-0 opacity-30">
      <div class="absolute inset-0 bg-cover bg-center" style={`background-image: url('${baseUrl}${category.heroImage}')`}></div>
    </div>
