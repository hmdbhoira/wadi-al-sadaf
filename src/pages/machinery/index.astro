          <!-- Panel Fabrication -->
          <a href={`${baseUrl}machinery/panel-fabrication/`} class="group bg-white p-8 rounded-xl hover:shadow-xl transition-all hover:-translate-y-2 border-2 border-transparent hover:border-[var(--brand-gold)]">
            <div class="w-16 h-16 bg-[var(--brand-gold)] rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
              <span class="text-3xl text-white">üè≠</span>
            </div>
            <h3 class="text-2xl font-bold text-[var(--brand-black)] mb-3">Panel Fabrication</h3>
            <p class="text-[var(--brand-gray)] mb-4">VFD panels, PLC panels, MCCs, control stations, and distribution panels.</p>
            <span class="text-[var(--brand-gold)] font-semibold group-hover:text-[var(--brand-gold-dark)]">View Services ‚Üí</span>
          </a>

          <!-- Control Projects -->
          <a href={`${baseUrl}machinery/control-projects/`} class="group bg-white p-8 rounded-xl hover:shadow-xl transition-all hover:-translate-y-2 border-2 border-transparent hover:border-[var(--brand-gold)]">
            <div class="w-16 h-16 bg-[var(--brand-gold)] rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
              <span class="text-3xl text-white">üìã</span>
            </div>
            <h3 class="text-2xl font-bold text-[var(--brand-black)] mb-3">Control Projects</h3>
            <p class="text-[var(--brand-gray)] mb-4">Design, installation, commissioning, AMC, and smart plant automation.</p>
            <span class="text-[var(--brand-gold)] font-semibold group-hover:text-[var(--brand-gold-dark)]">View Services ‚Üí</span>
          </a>
        </div>

        <div class="text-center mt-12">
          <a
            href={`${baseUrl}machinery/services/`}
            class="inline-block bg-[var(--brand-gold)] text-white px-8 py-4 rounded-lg hover:bg-[var(--brand-gold-dark)] transition-all font-semibold shadow-lg hover:shadow-xl"
          >
            View All Services ‚Üí
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-20 bg-gradient-to-b from-gray-50 to-white">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-[var(--brand-black)] mb-4">Why Choose Us</h2>
          <div class="w-24 h-1 bg-[var(--brand-gold)] mx-auto"></div>
        </div>

        <div class="grid md:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="w-20 h-20 bg-[var(--brand-cream)] rounded-full flex items-center justify-center mx-auto mb-4 border-2 border-[var(--brand-gold)]">
              <span class="text-3xl">‚úì</span>
            </div>
            <h4 class="text-xl font-bold text-[var(--brand-black)] mb-2">Quality Assurance</h4>
            <p class="text-[var(--brand-gray)]">Stringent quality control on every product</p>
          </div>

          <div class="text-center">
            <div class="w-20 h-20 bg-[var(--brand-cream)] rounded-full flex items-center justify-center mx-auto mb-4 border-2 border-[var(--brand-gold)]">
              <span class="text-3xl">üöö</span>
            </div>
            <h4 class="text-xl font-bold text-[var(--brand-black)] mb-2">Timely Delivery</h4>
            <p class="text-[var(--brand-gray)]">Efficient processes, on-time every time</p>
          </div>

          <div class="text-center">
            <div class="w-20 h-20 bg-[var(--brand-cream)] rounded-full flex items-center justify-center mx-auto mb-4 border-2 border-[var(--brand-gold)]">
              <span class="text-3xl">üí°</span>
            </div>
            <h4 class="text-xl font-bold text-[var(--brand-black)] mb-2">Expert Support</h4>
            <p class="text-[var(--brand-gray)]">Technical guidance throughout your project</p>
          </div>

          <div class="text-center">
            <div class="w-20 h-20 bg-[var(--brand-cream)] rounded-full flex items-center justify-center mx-auto mb-4 border-2 border-[var(--brand-gold)]">
              <span class="text-3xl">üè≠</span>
            </div>
            <h4 class="text-xl font-bold text-[var(--brand-black)] mb-2">Industry Experience</h4>
            <p class="text-[var(--brand-gray)]">Decades across multiple sectors</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Industries We Serve -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold text-[var(--brand-black)] mb-4">Industries We Serve</h2>
          <div class="w-24 h-1 bg-[var(--brand-gold)] mx-auto mb-6"></div>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4">
          {['Sugar', 'Pharma', 'Cement', 'Paper', 'Food & Beverage', 'Metals & Mining', 'Dairy', 'Poultry', 'Gas', 'BEV'].map((industry) => (
            <div class="bg-[var(--brand-cream)] text-[var(--brand-gold-dark)] px-6 py-4 rounded-lg font-semibold text-center shadow-md border-2 border-[var(--brand-gold)]/20 hover:border-[var(--brand-gold)] hover:shadow-lg transition-all">
              {industry}
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="relative bg-[var(--brand-gold)] py-20 overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 right-0 w-96 h-96 bg-white rounded-full -translate-y-1/2 translate-x-1/2"></div>
      <div class="absolute bottom-0 left-0 w-80 h-80 bg-white rounded-full translate-y-1/2 -translate-x-1/2"></div>
    </div>
    <div class="container mx-auto px-4 text-center relative z-10">
      <h2 class="text-4xl font-bold text-white mb-6">Ready to Get Started?</h2>
      <p class="text-xl text-white mb-10 max-w-2xl mx-auto leading-relaxed">
        Contact our expert team for customized solutions tailored to your industrial needs.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href={`${baseUrl}machinery/products/`}
          class="bg-white text-[var(--brand-gold)] px-10 py-4 rounded-lg hover:bg-[var(--brand-cream)] transition-all font-semibold text-lg shadow-xl hover:shadow-2xl transform hover:-translate-y-1"
        >
          View All Products
        </a>
        <a
          href={`${baseUrl}machinery/services/`}
          class="bg-white text-[var(--brand-gold)] px-10 py-4 rounded-lg hover:bg-[var(--brand-cream)] transition-all font-semibold text-lg shadow-xl hover:shadow-2xl transform hover:-translate-y-1"
        >
