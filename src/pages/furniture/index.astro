---
// Furniture - Coming Soon page
import '../../styles/global.css';

const baseUrl = import.meta.env.BASE_URL || '/';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Wadi Al Sadaf - Outdoor Furniture & Pool Equipment Coming Soon" />
    <title>Outdoor & Pool - Coming Soon | Wadi Al Sadaf</title>
    <link rel="icon" type="image/jpeg" href={`${baseUrl}images/logo.jpeg`} />
  </head>
  <body class="min-h-screen bg-gradient-to-br from-gray-100 to-gray-200 flex flex-col">
    <!-- Header -->
    <header class="py-6">
      <div class="container mx-auto px-4">
        <a href={baseUrl} class="inline-flex items-center gap-3 text-gray-600 hover:text-gray-800 transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          <span class="font-medium">Back to Home</span>
        </a>
      </div>
    </header>

    <!-- Main Content -->
    <main class="flex-grow flex items-center justify-center px-4">
      <div class="text-center max-w-2xl">
        <!-- Icon -->
        <div class="w-32 h-32 bg-gray-300 rounded-full flex items-center justify-center mx-auto mb-8">
          <svg class="w-16 h-16 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
        </div>

        <!-- Text -->
        <h1 class="text-4xl md:text-5xl font-bold text-gray-800 mb-4">
          Coming Soon
        </h1>
        <p class="text-xl text-gray-600 mb-8">
          Our Outdoor & Pool division is under development.
        </p>
        <p class="text-gray-500 mb-12">
          Outdoor furniture, pool equipment, and landscaping solutions will be available here soon.
        </p>

        <!-- CTA -->
        <a
          href={baseUrl}
          class="inline-block bg-gray-800 text-white px-8 py-4 rounded-xl hover:bg-gray-900 transition-all font-semibold shadow-lg hover:shadow-xl"
        >
          Explore Machinery Products
        </a>
      </div>
    </main>

    <!-- Simple Footer -->
    <footer class="py-6 text-center">
      <p class="text-gray-500 text-sm">
        &copy; {new Date().getFullYear()} Wadi Al Sadaf General Trading LLC
      </p>
    </footer>
  </body>
</html>
