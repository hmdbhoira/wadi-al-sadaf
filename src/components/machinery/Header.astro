---
// Machinery domain header - Home links to /machinery/
const currentPath = Astro.url.pathname;
---

<header class="bg-[var(--brand-navy)] shadow-lg sticky top-0 z-50 border-b-4 border-[var(--brand-gold)]">
  <div class="container mx-auto px-4">
    <!-- Top bar with contact info -->
    <div class="border-b border-[var(--brand-gold)]/30 py-2">
      <div class="flex flex-col sm:flex-row justify-between items-center text-sm text-gray-300">
        <div class="flex items-center gap-4 mb-2 sm:mb-0">
          <a href="tel:+971554274256" class="hover:text-[var(--brand-gold-light)] transition-colors font-medium">
            <span class="inline-block mr-1">ðŸ“±</span>
            +971 55 427 4256
          </a>
          <a href="mailto:wadialsadaf.sales@gmail.com" class="hover:text-[var(--brand-gold-light)] transition-colors font-medium">
            <span class="inline-block mr-1">âœ‰</span>
            wadialsadaf.sales@gmail.com
          </a>
        </div>
      </div>
    </div>

    <!-- Main navigation -->
    <nav class="py-4">
      <div class="flex items-center justify-between">
        <!-- Logo -->
        <a href="/machinery/" class="flex items-center gap-3 hover:opacity-90 transition-opacity">
          <img src="/images/logo.jpeg" alt="Wadi Al Sadaf" class="h-16 w-16 object-contain rounded-full border-2 border-[var(--brand-gold)] shadow-lg" />
          <div>
            <h1 class="text-xl font-bold text-white">Wadi Al Sadaf</h1>
            <p class="text-xs text-[var(--brand-gold-light)] font-medium">Machinery Division</p>
          </div>
        </a>

        <!-- Desktop Navigation -->
        <div class="hidden md:flex items-center gap-6">
          <a
            href="/machinery/"
            class={`transition-all font-semibold ${currentPath === '/machinery/' || currentPath === '/machinery' ? 'text-[var(--brand-gold-light)] border-b-2 border-[var(--brand-gold-light)] pb-1' : 'text-gray-300 hover:text-[var(--brand-gold-light)]'}`}
          >
            Home
          </a>
          <a
            href="/machinery/products/"
            class={`transition-all font-semibold ${currentPath.startsWith('/machinery/products') || currentPath.startsWith('/machinery/electrical') || currentPath.startsWith('/machinery/automation') || currentPath.startsWith('/machinery/instrumentation') ? 'text-[var(--brand-gold-light)] border-b-2 border-[var(--brand-gold-light)] pb-1' : 'text-gray-300 hover:text-[var(--brand-gold-light)]'}`}
          >
            Products
          </a>
          <a
            href="/machinery/about/"
            class={`transition-all font-semibold ${currentPath === '/machinery/about/' ? 'text-[var(--brand-gold-light)] border-b-2 border-[var(--brand-gold-light)] pb-1' : 'text-gray-300 hover:text-[var(--brand-gold-light)]'}`}
          >
            About Us
          </a>
          <a
            href="/machinery/contact/"
            class={`transition-all font-semibold ${currentPath === '/machinery/contact/' ? 'text-[var(--brand-gold-light)] border-b-2 border-[var(--brand-gold-light)] pb-1' : 'text-gray-300 hover:text-[var(--brand-gold-light)]'}`}
          >
            Contact
          </a>
          <a
            href="/machinery/contact/"
            class="bg-[var(--brand-gold)] text-white px-8 py-3 rounded-md hover:bg-[var(--brand-gold-light)] transition-all font-bold shadow-md hover:shadow-lg"
          >
            Request Quote
          </a>
        </div>

        <!-- Mobile menu button -->
        <button
          id="mobile-menu-button"
          class="md:hidden text-gray-300 hover:text-[var(--brand-gold-light)]"
          aria-label="Toggle menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>

      <!-- Mobile Navigation -->
      <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 border-t border-[var(--brand-gold)]/30 pt-4">
        <div class="flex flex-col gap-4">
          <a
            href="/machinery/"
            class={`transition-colors font-semibold ${currentPath === '/machinery/' || currentPath === '/machinery' ? 'text-[var(--brand-gold-light)]' : 'text-gray-300 hover:text-[var(--brand-gold-light)]'}`}
          >
            Home
          </a>
          <a
            href="/machinery/products/"
            class={`transition-colors font-semibold ${currentPath.startsWith('/machinery/products') || currentPath.startsWith('/machinery/electrical') || currentPath.startsWith('/machinery/automation') || currentPath.startsWith('/machinery/instrumentation') ? 'text-[var(--brand-gold-light)]' : 'text-gray-300 hover:text-[var(--brand-gold-light)]'}`}
          >
            Products
          </a>
          <a
            href="/machinery/about/"
            class={`transition-colors font-semibold ${currentPath === '/machinery/about/' ? 'text-[var(--brand-gold-light)]' : 'text-gray-300 hover:text-[var(--brand-gold-light)]'}`}
          >
            About Us
          </a>
          <a
            href="/machinery/contact/"
            class={`transition-colors font-semibold ${currentPath === '/machinery/contact/' ? 'text-[var(--brand-gold-light)]' : 'text-gray-300 hover:text-[var(--brand-gold-light)]'}`}
          >
            Contact
          </a>
          <a
            href="/machinery/contact/"
            class="bg-[var(--brand-gold)] text-white px-8 py-3 rounded-md hover:bg-[var(--brand-gold-light)] transition-colors font-bold text-center shadow-md"
          >
            Request Quote
          </a>
        </div>
      </div>
    </nav>
  </div>
</header>

<script>
  // Mobile menu toggle
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');

  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
