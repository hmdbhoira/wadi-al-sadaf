---
// Machinery products page - shows 3 category tiles
import MachineryLayout from '../../../layouts/MachineryLayout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import { machineryCategories } from '../../../data/machinery';

const baseUrl = import.meta.env.BASE_URL || '/';

const breadcrumbs = [
  { label: 'Home', href: `${baseUrl}machinery/` },
  { label: 'Products' },
];
---

<MachineryLayout
  title="Products"
  description="Complete range of electrical, automation, and instrumentation products for industrial applications. Trusted brands including SIEMENS, ABB, Schneider Electric, and more."
>
  <!-- Hero Section -->
  <section class="relative bg-black pt-8 pb-24 md:pt-12 md:pb-32">
    <div class="absolute inset-0 opacity-40">
      <div class="absolute inset-0 bg-cover bg-center" style={`background-image: url('${baseUrl}images/machinery/electrical/hero.png')`}></div>
    </div>
    <div class="absolute inset-0 bg-gradient-to-br from-black/60 to-brand-gold-dark/60"></div>
    <div class="container mx-auto px-4 relative z-10">
      <Breadcrumbs items={breadcrumbs} />
      <div class="text-center max-w-4xl mx-auto mt-8">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 drop-shadow-2xl">
          Machinery & Industrial Solutions
        </h1>
        <p class="text-xl md:text-2xl text-white mb-8 drop-shadow-xl">
          Comprehensive industrial automation, electrical, and instrumentation products from world-leading brands.
        </p>
        <a
          href="#categories"
          class="inline-block bg-[var(--brand-gold)] text-white px-8 py-4 rounded-lg hover:bg-[var(--brand-gold-light)] transition-all font-bold text-lg shadow-2xl hover:shadow-3xl transform hover:-translate-y-1"
        >
          Browse Categories
        </a>
      </div>
    </div>
  </section>

  <!-- Category Grid -->
  <section id="categories" class="py-20 bg-gradient-to-b from-gray-50 to-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-[var(--brand-black)] text-center mb-4">
        Browse by Category
      </h2>
      <p class="text-center text-[var(--brand-gray)] mb-12 max-w-2xl mx-auto">
        Choose from our comprehensive range of electrical, automation, and instrumentation solutions
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
        {
          machineryCategories.map((category) => (
            <a
              href={`${baseUrl}machinery/${category.slug}/`}
              class="group bg-white rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden border-2 border-gray-200 hover:border-[var(--brand-gold)] transform hover:-translate-y-1"
            >
              <!-- Category Image -->
              <div class="relative h-72 overflow-hidden bg-gradient-to-br from-gray-100 to-gray-200">
                <img
                  src={`${baseUrl}${category.heroImage}`}
                  alt={category.name}
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent" />
                <div class="absolute bottom-0 left-0 right-0 p-6">
                  <h3 class="text-3xl font-bold text-white mb-2 drop-shadow-lg">
                    {category.name}
                  </h3>
                  <div class="flex items-center gap-2 text-white/90">
                    <span class="text-sm font-medium bg-white/20 backdrop-blur-sm px-3 py-1 rounded-full">
                      {category.products.length} Products
                    </span>
                  </div>
                </div>
              </div>

              <!-- Category Info -->
              <div class="p-6 bg-white">
                <p class="text-[var(--brand-gray)] mb-6 text-base leading-relaxed">{category.description}</p>

                <!-- Brands Preview -->
                {category.brands && category.brands.length > 0 && (
                  <div class="mb-4 pb-4 border-t border-gray-200 pt-4">
                    <p class="text-xs font-semibold text-[var(--brand-gray)] mb-3 uppercase tracking-wide">Featured Brands:</p>
                    <div class="flex flex-wrap gap-2">
                      {category.brands.slice(0, 3).map((brand) => (
                        <span class="text-xs bg-[var(--brand-cream)] text-[var(--brand-gold-dark)] px-3 py-1.5 rounded-md font-medium">
                          {brand}
                        </span>
                      ))}
                      {category.brands.length > 3 && (
                        <span class="text-xs text-[var(--brand-gray)] bg-gray-100 px-3 py-1.5 rounded-md">
                          +{category.brands.length - 3} more
                        </span>
                      )}
                    </div>
                  </div>
                )}

                <div class="flex items-center justify-between mt-4">
                  <span class="text-[var(--brand-gold)] font-semibold group-hover:text-[var(--brand-gold-dark)] transition-colors">
                    View All Products
                  </span>
                  <span class="text-[var(--brand-gold)] group-hover:translate-x-2 transition-transform duration-300 text-xl">
                    â†’
                  </span>
                </div>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Industries Section -->
  <section class="py-12 bg-white border-y border-gray-200">
    <div class="container mx-auto px-4">
      <div class="text-center mb-8">
        <h3 class="text-2xl font-bold text-[var(--brand-black)] mb-3">Serving Multiple Industries</h3>
        <p class="text-[var(--brand-gray)]">Years of experience across diverse industrial sectors</p>
      </div>
      <div class="flex flex-wrap justify-center gap-4 max-w-5xl mx-auto">
        {['Sugar', 'Pharma', 'Cement', 'Paper', 'Food & Beverage', 'Metals & Mining', 'Dairy', 'Poultry', 'Gas'].map((industry) => (
          <span class="bg-[var(--brand-cream)] text-[var(--brand-gold-dark)] px-6 py-3 rounded-lg font-medium text-sm shadow-sm border border-[var(--brand-gold)]/20">
            {industry}
          </span>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="relative bg-[var(--brand-gold)] py-20 overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 right-0 w-96 h-96 bg-white rounded-full -translate-y-1/2 translate-x-1/2"></div>
      <div class="absolute bottom-0 left-0 w-80 h-80 bg-white rounded-full translate-y-1/2 -translate-x-1/2"></div>
    </div>
    <div class="container mx-auto px-4 text-center relative z-10">
      <h2 class="text-4xl font-bold text-white mb-6">Need Help Finding the Right Product?</h2>
      <p class="text-xl text-white mb-10 max-w-2xl mx-auto leading-relaxed">
        Our expert technical team is ready to provide recommendations for customized products and systems
        suitable for your specific applications.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href={`${baseUrl}machinery/contact/`}
          class="bg-white text-[var(--brand-gold)] px-10 py-4 rounded-lg hover:bg-[var(--brand-cream)] transition-all font-semibold text-lg shadow-xl hover:shadow-2xl transform hover:-translate-y-1"
        >
          Contact Us
        </a>
        <a
          href="tel:+971554274256"
          class="bg-[var(--brand-gold-dark)] text-white px-10 py-4 rounded-lg hover:bg-[var(--brand-black)] transition-all font-semibold text-lg border-3 border-white shadow-xl hover:shadow-2xl transform hover:-translate-y-1"
        >
          ðŸ“± +971 55 427 4256
        </a>
      </div>
    </div>
  </section>
</MachineryLayout>
