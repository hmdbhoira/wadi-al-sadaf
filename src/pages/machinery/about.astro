---
// About Us page for Machinery domain
import MachineryLayout from '../../layouts/MachineryLayout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';

const baseUrl = import.meta.env.BASE_URL || '/';

const breadcrumbs = [
  { label: 'Home', href: `${baseUrl}machinery/` },
  { label: 'About Us' },
];

const companyInfo = {
  name: 'Wadi Al Sadaf',
  fullName: 'Wadi Al Sadaf General Trading LLC',
  mission: 'To help our customers power their industries with proven solutions that are cost effective, efficient and environmentally friendly while continuously fostering a culture of empowerment and ensuring that we live and breathe our core values.',
  vision: 'To become the first choice of our customers in the field of industrial power needs, through exceptional business performance and innovation in technology.',
};

const expertise = [
  {
    industry: 'Sugar Industry',
    description: 'Process automation, instrumentation for sugar mills, and electrical systems for production lines.'
  },
  {
    industry: 'Pharmaceutical',
    description: 'Precision instrumentation, cleanroom-compatible automation, and validated control systems.'
  },
  {
    industry: 'Cement & Mining',
    description: 'Heavy-duty electrical equipment, rugged instrumentation, and industrial automation for harsh environments.'
  },
  {
    industry: 'Food & Beverage',
    description: 'Hygienic process control, temperature monitoring, and food-grade automation solutions.'
  },
  {
    industry: 'Paper Industry',
    description: 'Drive systems, process instrumentation, and automation for pulp and paper manufacturing.'
  },
  {
    industry: 'Metals & Mining',
    description: 'High-power electrical systems, safety instrumentation, and robust automation for metal processing.'
  }
];

const coreValues = [
  {
    title: 'Quality First',
    description: 'We never compromise on quality. Every product we supply undergoes stringent quality checks to ensure it meets the highest industry standards. Our partnerships with world-leading brands guarantee authentic, reliable equipment.',
    icon: '‚úì'
  },
  {
    title: 'Customer Partnership',
    description: 'We don\'t just sell products - we build partnerships. Our team works closely with you to understand your specific requirements, challenges, and goals. Your success is our success.',
    icon: 'ü§ù'
  },
  {
    title: 'Technical Excellence',
    description: 'Our team brings decades of hands-on experience across multiple industries. We provide not just products, but technical guidance, application support, and solutions tailored to your specific needs.',
    icon: 'üí°'
  },
  {
    title: 'Reliability & Trust',
    description: 'We deliver what we promise, when we promise. Our commitment to timely delivery and transparent communication has earned us the trust of clients across the UAE and beyond.',
    icon: '‚≠ê'
  }
];

const services = [
  'Product Supply & Sourcing',
  'Technical Consultation',
  'Panel Fabrication',
  'Repairing & Calibration',
  'Annual Maintenance Contracts',
  'Control System Projects',
  'Commissioning Support',
  'Emergency On-Call Services'
];
---

<MachineryLayout
  title="About Us"
  description="Learn about Wadi Al Sadaf - decades of experience providing industrial automation, electrical, and instrumentation solutions across multiple industries in the UAE."
>
  <!-- Hero Section -->
  <section class="relative bg-black pt-8 pb-24 md:pt-12 md:pb-32">
    <div class="absolute inset-0 opacity-40">
      <div class="absolute inset-0 bg-cover bg-center" style={`background-image: url('${baseUrl}images/machinery/automation/automation-hero.png')`}></div>
    </div>
    <div class="absolute inset-0 bg-gradient-to-br from-black/60 to-brand-gold-dark/60"></div>
    <div class="container mx-auto px-4 relative z-10">
      <Breadcrumbs items={breadcrumbs} />
      <div class="text-center max-w-4xl mx-auto mt-8">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 drop-shadow-2xl">
          About Us
        </h1>
        <p class="text-xl md:text-2xl text-white mb-8 drop-shadow-xl">
          Decades of industrial expertise, powering industries across the UAE
        </p>
      </div>
    </div>
  </section>

  <!-- Our Story -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-3xl md:text-4xl font-bold text-[var(--brand-black)] mb-6">
              Our Story
            </h2>
            <div class="w-20 h-1 bg-[var(--brand-gold)] mb-8"></div>

            <p class="text-lg text-[var(--brand-gray)] leading-relaxed mb-6">
              <strong class="text-[var(--brand-black)]">Wadi Al Sadaf General Trading LLC</strong> was founded by a group of passionate industry professionals who saw an opportunity to bring world-class industrial solutions to the UAE market.
            </p>

            <p class="text-lg text-[var(--brand-gray)] leading-relaxed mb-6">
              Our founders collectively bring <strong class="text-[var(--brand-black)]">decades of hands-on experience</strong> working in industries ranging from Sugar and Pharmaceuticals to Cement, Paper, Food & Beverage, and Metals & Mining. This deep industry knowledge allows us to truly understand our customers' challenges.
            </p>

            <p class="text-lg text-[var(--brand-gray)] leading-relaxed">
              Based in <strong class="text-[var(--brand-black)]">Dubai Industrial City</strong>, we serve clients across the UAE and the broader Middle East region, providing not just products but complete industrial solutions backed by technical expertise.
            </p>
          </div>

          <div class="relative">
            <div class="bg-[var(--brand-cream)] rounded-2xl p-8 shadow-xl">
              <img
                src={`${baseUrl}images/logo.jpeg`}
                alt="Wadi Al Sadaf"
                class="w-48 h-48 object-contain mx-auto rounded-full shadow-lg border-4 border-[var(--brand-gold)]"
              />
              <div class="text-center mt-6">
                <h3 class="text-2xl font-bold text-[var(--brand-black)]">{companyInfo.fullName}</h3>
                <p class="text-[var(--brand-gold-dark)] mt-2">Dubai Industrial City, UAE</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Mission & Vision -->
  <section class="py-20 bg-gradient-to-b from-gray-50 to-white">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-[var(--brand-black)] mb-4">Our Purpose</h2>
          <div class="w-24 h-1 bg-[var(--brand-gold)] mx-auto"></div>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          <!-- Mission -->
          <div class="bg-white p-10 rounded-xl shadow-lg border-l-4 border-[var(--brand-gold)] hover:shadow-xl transition-shadow">
            <div class="flex items-center gap-4 mb-6">
              <div class="w-14 h-14 bg-[var(--brand-gold)] rounded-xl flex items-center justify-center text-white text-2xl font-bold shadow-md">
                M
              </div>
              <h3 class="text-3xl font-bold text-[var(--brand-black)]">Our Mission</h3>
            </div>
            <p class="text-[var(--brand-gray)] leading-relaxed text-lg">
              {companyInfo.mission}
            </p>
          </div>

          <!-- Vision -->
          <div class="bg-white p-10 rounded-xl shadow-lg border-l-4 border-[var(--brand-gold)] hover:shadow-xl transition-shadow">
            <div class="flex items-center gap-4 mb-6">
              <div class="w-14 h-14 bg-[var(--brand-gold)] rounded-xl flex items-center justify-center text-white text-2xl font-bold shadow-md">
                V
              </div>
              <h3 class="text-3xl font-bold text-[var(--brand-black)]">Our Vision</h3>
            </div>
            <p class="text-[var(--brand-gray)] leading-relaxed text-lg">
              {companyInfo.vision}
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Core Values -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-[var(--brand-black)] mb-4">What We Stand For</h2>
          <div class="w-24 h-1 bg-[var(--brand-gold)] mx-auto mb-6"></div>
          <p class="text-lg text-[var(--brand-gray)] max-w-2xl mx-auto">
            Our values guide every decision we make and every relationship we build
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          {coreValues.map((value) => (
            <div class="bg-gray-50 p-8 rounded-xl hover:shadow-lg transition-all border border-gray-100">
              <div class="flex items-start gap-4">
                <div class="w-14 h-14 bg-[var(--brand-cream)] rounded-full flex items-center justify-center border-2 border-[var(--brand-gold)] flex-shrink-0">
                  <span class="text-2xl">{value.icon}</span>
                </div>
                <div>
                  <h4 class="text-xl font-bold text-[var(--brand-black)] mb-3">{value.title}</h4>
                  <p class="text-[var(--brand-gray)] leading-relaxed">{value.description}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Industry Expertise -->
  <section class="py-20 bg-gradient-to-b from-[var(--brand-cream)] to-white">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-[var(--brand-black)] mb-4">Industry Expertise</h2>
          <div class="w-24 h-1 bg-[var(--brand-gold)] mx-auto mb-6"></div>
          <p class="text-lg text-[var(--brand-gray)] max-w-2xl mx-auto">
            Our team's experience spans across diverse industrial sectors
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {expertise.map((item) => (
            <div class="bg-white p-6 rounded-xl shadow-md hover:shadow-lg transition-all border-t-4 border-[var(--brand-gold)]">
              <h4 class="text-lg font-bold text-[var(--brand-black)] mb-2">{item.industry}</h4>
              <p class="text-[var(--brand-gray)] text-sm leading-relaxed">{item.description}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Our Services -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-3xl md:text-4xl font-bold text-[var(--brand-black)] mb-6">
              Beyond Products
            </h2>
            <div class="w-20 h-1 bg-[var(--brand-gold)] mb-8"></div>

            <p class="text-lg text-[var(--brand-gray)] leading-relaxed mb-6">
              We're more than just a trading company. Our comprehensive service offerings ensure you have support at every stage of your project - from initial consultation to ongoing maintenance.
            </p>

            <p class="text-lg text-[var(--brand-gray)] leading-relaxed">
              Whether you need emergency repairs, calibration services, or complete control system projects, our experienced team is ready to help.
            </p>
          </div>

          <div class="bg-gray-50 p-8 rounded-xl">
            <h4 class="font-bold text-[var(--brand-black)] mb-6 text-lg">Our Services Include:</h4>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
              {services.map((service) => (
                <div class="flex items-center gap-3">
                  <span class="text-[var(--brand-gold)] text-lg">‚úì</span>
                  <span class="text-[var(--brand-gray)]">{service}</span>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="relative bg-[var(--brand-gold)] py-20 overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 right-0 w-96 h-96 bg-white rounded-full -translate-y-1/2 translate-x-1/2"></div>
      <div class="absolute bottom-0 left-0 w-80 h-80 bg-white rounded-full translate-y-1/2 -translate-x-1/2"></div>
    </div>
    <div class="container mx-auto px-4 text-center relative z-10">
      <h2 class="text-4xl font-bold text-white mb-6">Let's Work Together</h2>
      <p class="text-xl text-white mb-10 max-w-2xl mx-auto leading-relaxed">
        Ready to discuss your industrial needs? Our team is here to help you find the right solutions.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href={`${baseUrl}machinery/contact/`}
          class="bg-white text-[var(--brand-gold)] px-10 py-4 rounded-lg hover:bg-[var(--brand-cream)] transition-all font-semibold text-lg shadow-xl hover:shadow-2xl transform hover:-translate-y-1"
        >
          Contact Us
        </a>
        <a
          href={`${baseUrl}machinery/products/`}
          class="bg-[var(--brand-gold-dark)] text-white px-10 py-4 rounded-lg hover:bg-[var(--brand-black)] transition-all font-semibold text-lg border-2 border-white shadow-xl hover:shadow-2xl transform hover:-translate-y-1"
        >
          View Products
        </a>
      </div>
    </div>
  </section>
</MachineryLayout>
